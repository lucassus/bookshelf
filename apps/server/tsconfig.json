{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@bookshelf/server/infra/*": ["infra/*"],
      "@bookshelf/server/interfaces/*": ["interfaces/*"],
      "@bookshelf/server/types/*": ["types/*"]
    }
  },
  "include": ["./src/**/*"],
  "references": [
    { "path": "../../libs/secure-id" },
    { "path": "../../libs/string-utils" }
  ]
}
