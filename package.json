{
  "name": "bookshelf",
  "version": "1.0.0",
  "repository": "git@github.com:lucassus/bookshelf.git",
  "author": "≈Åukasz Bandzarewicz <lukasz.bandzarewicz@gmail.com>",
  "private": true,
  "engines": {
    "node": "13.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "server": "yarn workspace @bookshelf/server",
    "web": "yarn workspace @bookshelf/web",
    "test": "jest",
    "build": "yarn server build && yarn web build --mode production",
    "start": "node packages/server/dist/index.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server start\" \"yarn web start\""
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "concurrently": "5.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "jest": "25.4.0",
    "prettier": "2.0.5",
    "ts-jest": "25.4.0"
  }
}
