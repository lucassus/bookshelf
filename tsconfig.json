{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@bookshelf/*": ["libs/*/src"]
    },
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES2017",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,

    "composite": true
  },

  "exclude": ["node_modules", "dist"]
}
