{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES2017",
    "sourceMap": true,
    "declaration": true,

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },

  "exclude": [
    "dist"
  ]
}
