{
  "name": "bookshelf",
  "version": "1.0.0",
  "repository": "git@github.com:lucassus/bookshelf.git",
  "author": "≈Åukasz Bandzarewicz <lukasz.bandzarewicz@gmail.com>",
  "private": true,
  "engines": {
    "node": "14.6.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/typeorm/**",
      "**/typeorm"
    ]
  },
  "devDependencies": {
    "@types/jest": "26.0.7",
    "@types/node": "14.0.26",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "concurrently": "5.2.0",
    "eslint": "7.5.0",
    "eslint-config-airbnb-typescript": "9.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.18.2",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.1.0",
    "jest-watch-typeahead": "0.6.0",
    "lerna": "3.22.1",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.1.3",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  },
  "dependencies": {},
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "postinstall": "yarn bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "codegen": "lerna run codegen",
    "typecheck": "lerna run typecheck",
    "nuke": "rm -rf node_modules; for d in packages/*/node_modules; do echo $d; rm -r $d; done",
    "lint": "lerna run lint",
    "test": "jest",
    "start": "yarn workspace @bookshelf/server start",
    "dev": "concurrently --raw --kill-others-on-fail 'yarn workspace @bookshelf/server dev' 'yarn workspace @bookshelf/web dev'"
  }
}
